
page {
	background-color: #F2F2F2;
}
.main-container {
	padding: 0;
	background-color: #F2F2F2;
}
.header-text,
.current-city {
	margin-bottom: 15rpx;
}
.header {
	padding: 25rpx 24rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	    -ms-flex-align: start;
	        align-items: flex-start;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	font-size: 26rpx;
}
.current-city {
	background-color: #FFFFFF;

	padding: 5rpx 40rpx;
}
.city-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;

	-webkit-box-orient: vertical;

	-webkit-box-direction: normal;

	-webkit-flex-direction: column;

	    -ms-flex-direction: column;

	        flex-direction: column;
}
.city-letter {
	padding: 10rpx 24rpx;
	font-size: 30rpx;
}
.city {
	background-color: #FFFFFF;
	padding: 28rpx 24rpx;
	border-bottom: 1rpx solid #F2F2F2;
	border-top: 1rpx solid #F2F2F2;
	font-size: 32rpx;
}
.selected {
	color: #FFD700;
}

