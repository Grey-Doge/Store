<view class="main-container"><view class="header"><view class="intput-container"><image src="../../static/icon-search.png"></image><input style="width:100%;" placeholder="请输入你搜索的" maxlength="15" value="{{searchText}}"/></view></view><view class="switch-tab"><view class="switch-tab-item" data-index="{{0}}" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><text style="{{'color:'+(currentTab==0?'#FF0000':'')+';'}}">文章</text><text class="{{[currentTab==0?'active':'']}}"></text></view><view class="switch-tab-item" data-index="{{1}}" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><text style="{{'color:'+(currentTab==1?'#FF0000':'')+';'}}">商家</text><text class="{{[currentTab==1?'active':'']}}"></text></view></view><view hidden="{{!(currentTab==0)}}" class="essay-content"><block wx:if="{{essayList.length>0}}"><block><block wx:for="{{essayList}}" wx:for-item="item" wx:for-index="__i0__"><view class="essay-item"><navigator open-type="navigate" url="{{['../shop/essaydetail?id='+item.id]}}" hover-class="none"><image mode="widthFix" src="{{item.cover}}"></image><view class="essay"><view class="title"><text>{{item.title}}</text></view><view class="publisher"><view class="shop"><view class="avatar"><image src="{{item.shops_logo}}"></image></view><view class="name">{{item.shops_name}}</view></view><view class="publish-date"><text>{{item.date}}</text></view></view></view></navigator></view></block></block></block><block wx:else><block><view class="empty">暂无内容</view></block></block></view><view hidden="{{!(currentTab==1)}}" class="shop-content"><block wx:for="{{shopList}}" wx:for-item="item" wx:for-index="__i1__"><view class="shop-item"><view class="shop-header"><view class="shop-avatar"><image mode="aspectFill" src="{{item.shops_logo}}"></image></view><view class="shop-info"><text class="shop-name">{{item.shops_name}}</text><view class="shop-tag"><block wx:for="{{item.compan_tags}}" wx:for-item="item" wx:for-index="__i2__"><text>{{item}}</text></block></view></view><navigator open-type="navigate" url="{{['../shop/shopinfo?shops_id='+item.shops_id]}}" hover-class="none"><view class="into-shop">进店</view></navigator></view><view class="display-item"><block wx:for="{{item.previewimg}}" wx:for-item="item" wx:for-index="__i3__"><image src="{{item}}"></image></block></view></view></block></view><view data-event-opts="{{[['tap',[['loadMore',['$event']]]]]}}" hidden="{{!(essayList.length>0)}}" class="bottom" bindtap="__e">{{''+bottomText+''}}</view></view>