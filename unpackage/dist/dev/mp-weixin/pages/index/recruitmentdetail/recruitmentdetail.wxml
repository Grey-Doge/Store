<view class="main-container"><view class="header"><view class="job-info"><text class="job-name">{{detail.jobname}}</text><text class="salary">{{detail.jobmoney+"/月"}}</text></view><view class="require-tag"><block wx:for="{{detail.require_tag}}" wx:for-item="item" wx:for-index="__i0__"><view class="require-tag-item"><text>{{item}}</text></view></block></view><view class="job-tag"><block wx:for="{{detail.welfear_tag}}" wx:for-item="item" wx:for-index="__i1__"><text class="job-tag-item">{{item}}</text></block></view></view><view class="job-description"><view class="label">职位描述:</view><view class="description"><rich-text nodes="{{detail.content}}"></rich-text></view></view><view class="company"><image src="{{detail.shops_logo}}" mode="aspectFit"></image><view class="company-info"><view class="name">{{detail.companyname}}</view><view class="company-tag"><block wx:for="{{detail.compan_tag}}" wx:for-item="item" wx:for-index="__i2__"><text>{{item}}</text></block></view></view></view><view class="company-item"><text class="label">联系方式:</text><text data-event-opts="{{[['tap',[['phoneCall']]]]}}" class="phone" bindtap="__e">{{detail.tel}}</text></view><view class="company-item"><text class="label">公司地址:</text><text data-event-opts="{{[['tap',[['openMap']]]]}}" class="address" bindtap="__e">{{detail.adress}}</text></view><view class="company-item"><text class="label" style="align-self:flex-start;">公司介绍:</text><view class="description">{{''+detail.about+''}}</view></view></view>